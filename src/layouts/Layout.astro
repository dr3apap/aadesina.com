---
import BaseHead from '../components/BaseHead.astro';
import BlogHeader from '../components/BlogHeader.astro';
import BlogFooter from '../components/BlogFooter.astro';
import Nav from '../components/Nav.astro';

export interface Props {
			ogTitle?:string;
			ogHue?:string;
			ogGradient?:string;
			title?:string;
			description?:string;
			
}

const { ogTitle, ogGradient, ogHue, description, title }  = Astro.props;
---

<html lang="en">
	<head>
		<BaseHead ogTitle={ogTitle}
		         ogGradient={ogGradient}
				 ogHue={ogHue}
				 description={description}
				 title={title}
		/>
		
		<style>
			.title {
				font-size: 2em;
				margin: 0.25em 0 0;
			}
			hr {
				border-top: 1px solid #ddd;
				margin: 1rem 0;
			}
		</style>
	</head>
	<body>
		<Nav/>
		<BlogHeader />
		<slot/>
		<BlogFooter/>
	</body>
</html>
